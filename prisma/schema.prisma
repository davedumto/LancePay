generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String   @id @default(uuid())
  privyId          String   @unique
  email            String   @unique
  name             String?
  phone            String?
  referralCode     String?  @unique
  referredById     String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  backupCodes      String[] @default([])
  twoFactorEnabled Boolean  @default(false)
  twoFactorSecret  String?

  wallet           Wallet?
  bankAccounts     BankAccount[]
  invoices         Invoice[]
  transactions     Transaction[]
  reminderSettings ReminderSettings?
  autoSwapRule     AutoSwapRule?
  referredBy       User?             @relation("UserReferrals", fields: [referredById], references: [id])
  referrals        User[]            @relation("UserReferrals")
  referralEarnings ReferralEarning[] @relation("ReferrerEarnings")
  earningsFromMe   ReferralEarning[] @relation("ReferredUserEarnings")
  paymentAdvances  PaymentAdvance[]
  apiKeys          ApiKey[]
  brandingSettings BrandingSettings?
  webhooks         UserWebhook[]
  userBadges       UserBadge[]
  auditEvents      AuditEvent[]
  savingsGoals     SavingsGoal[]
  incomeVerifications IncomeVerification[]  
  payoutBatches       PayoutBatch[]
  manualPayments      ManualPayment[] @relation("ManualPaymentVerifier")
  collaborations   InvoiceCollaborator[] @relation("SubContractorCollaborations")

  walletSigners        WalletSigner[]
  multisigProposals    MultisigProposal[] @relation("MultisigProposer")
  proposalSignatures   ProposalSignature[]
}

model Wallet {
  id        String   @id @default(uuid())
  userId    String   @unique
  address   String   @unique
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model BankAccount {
  id            String   @id @default(uuid())
  userId        String
  bankName      String
  bankCode      String
  accountNumber String
  accountName   String
  isVerified    Boolean  @default(false)
  isDefault     Boolean  @default(false)
  createdAt     DateTime @default(now())

  user          User           @relation(fields: [userId], references: [id])
  withdrawals   Transaction[]  @relation("WithdrawalBank")
  autoSwapRules AutoSwapRule[]
}

model Invoice {
  id            String    @id @default(uuid())
  userId        String
  invoiceNumber String    @unique
  clientEmail   String
  clientName    String?
  description   String
  amount        Decimal   @db.Decimal(10, 2)
  currency      String    @default("USD")
  status        String    @default("pending")
  paymentLink   String    @unique
  dueDate       DateTime?
  paidAt        DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  user             User              @relation(fields: [userId], references: [id])
  transaction      Transaction?
  paymentReminders PaymentReminder[]
  dispute          Dispute?
  collaborators    InvoiceCollaborator[]
  escrowEnabled           Boolean           @default(false)
  escrowStatus            String            @default("none") // none, pending, funded, released, disputed
  escrowReleaseConditions String?
  escrowReleasedAt        DateTime?
  escrowDisputedAt        DateTime?
  escrowEvents            EscrowEvent[]
  lienActive              Boolean           @default(false)
  advances                PaymentAdvance[]
  auditEvents      AuditEvent[]
  // Confidential invoice fields (Zero-Knowledge encryption)
  isConfidential     Boolean  @default(false)
  encryptedPayload   String?  @db.Text // AES-256-GCM encrypted JSON blob
  decryptionSalt     String?  // Salt used in key derivation (not the key itself)
  messages                InvoiceMessage[]
  manualPayments          ManualPayment[]
}

model InvoiceMessage {
  id            String   @id @default(uuid())
  invoiceId     String
  senderId      String?  // null for guest clients
  senderType    String   // 'freelancer', 'client'
  senderName    String
  content       String   @db.Text
  attachmentUrl String?  @db.VarChar(512)
  isInternal    Boolean  @default(false) // if true, only freelancer sees
  createdAt     DateTime @default(now())

  invoice Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@index([invoiceId])
  @@index([createdAt])
}

model PaymentReminder {
  id           String   @id @default(uuid())
  invoiceId    String
  reminderType String
  daysOffset   Int?
  sentAt       DateTime @default(now())
  createdAt    DateTime @default(now())

  invoice Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
}

model ReminderSettings {
  id            String   @id @default(uuid())
  userId        String   @unique
  enabled       Boolean  @default(true)
  beforeDueDays Int[]    @default([3, 1])
  onDueEnabled  Boolean  @default(true)
  afterDueDays  Int[]    @default([1, 3, 7])
  customMessage String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Transaction {
  id                String    @id @default(uuid())
  userId            String
  type              String
  status            String    @default("pending")
  amount            Decimal   @db.Decimal(10, 2)
  currency          String    @default("USD")
  ngnAmount         Decimal?  @db.Decimal(15, 2)
  exchangeRate      Decimal?  @db.Decimal(10, 4)
  invoiceId         String?   @unique
  bankAccountId     String?
  txHash            String?
  createdAt         DateTime  @default(now())
  completedAt       DateTime?
  autoSwapTriggered Boolean   @default(false)
  error             String?
  externalId        String?   @unique

  user        User         @relation(fields: [userId], references: [id])
  invoice     Invoice?     @relation(fields: [invoiceId], references: [id])
  bankAccount BankAccount? @relation("WithdrawalBank", fields: [bankAccountId], references: [id])
}

model ReferralEarning {
  id             String   @id @default(uuid())
  referrerId     String
  referredUserId String
  invoiceId      String
  amountUsdc     Decimal  @db.Decimal(18, 6)
  platformFee    Decimal  @db.Decimal(18, 6)
  status         String   @default("earned")
  createdAt      DateTime @default(now())

  referrer     User @relation("ReferrerEarnings", fields: [referrerId], references: [id], onDelete: Cascade)
  referredUser User @relation("ReferredUserEarnings", fields: [referredUserId], references: [id], onDelete: Cascade)

  @@index([referrerId])
  @@index([referredUserId])
  @@index([createdAt])
}

model ApiKey {
  id         String    @id @default(uuid())
  userId     String
  name       String
  keyHint    String
  hashedKey  String    @unique
  isActive   Boolean   @default(true)
  lastUsedAt DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([hashedKey])
}

model AutoSwapRule {
  id            String   @id @default(uuid())
  userId        String   @unique
  percentage    Int
  bankAccountId String
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  bankAccount BankAccount @relation(fields: [bankAccountId], references: [id])
}

model BulkInvoiceJob {
  id           String    @id @default(uuid())
  userId       String
  status       String    @default("processing")
  totalCount   Int
  successCount Int       @default(0)
  failedCount  Int       @default(0)
  results      Json      @default("[]")
  createdAt    DateTime  @default(now())
  completedAt  DateTime?

  @@index([userId])
}

model Dispute {
  id              String    @id @default(uuid())
  invoiceId       String    @unique
  initiatedBy     String
  initiatorEmail  String
  reason          String
  requestedAction String
  status          String    @default("open")
  resolution      String?
  resolvedBy      String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  resolvedAt      DateTime?

  invoice  Invoice          @relation(fields: [invoiceId], references: [id])
  messages DisputeMessage[]

  @@index([invoiceId])
}

model DisputeMessage {
  id          String   @id @default(uuid())
  disputeId   String
  senderType  String
  senderEmail String
  message     String
  attachments Json     @default("[]")
  createdAt   DateTime @default(now())

  dispute Dispute @relation(fields: [disputeId], references: [id], onDelete: Cascade)

  @@index([disputeId])
}

model EscrowEvent {
  id         String   @id @default(uuid())
  invoiceId  String
  eventType  String
  actorType  String
  actorEmail String
  notes      String?
  metadata   Json?    @default("{}")
  createdAt  DateTime @default(now())

  invoice Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@index([invoiceId])
}

model BrandingSettings {
  id           String   @id @default(uuid())
  userId       String   @unique
  logoUrl      String?
  primaryColor String   @default("#000000")
  footerText   String?
  signatureUrl String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model UserWebhook {
  id               String    @id @default(uuid())
  userId           String
  targetUrl        String    @db.VarChar(512)
  signingSecret    String    @db.VarChar(255)
  description      String?   @db.VarChar(100)
  isActive         Boolean   @default(true)
  subscribedEvents String[]  @default(["invoice.paid"])
  lastTriggeredAt  DateTime?
  createdAt        DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isActive])
}

model PaymentAdvance {
  id                      String    @id @default(uuid())
  userId                  String
  invoiceId               String
  requestedAmountUSDC     Decimal   @db.Decimal(10, 2)
  advancedAmountUSDC      Decimal   @db.Decimal(10, 2)
  advancedAmountNGN       Decimal   @db.Decimal(15, 2)
  exchangeRate            Decimal   @db.Decimal(10, 4)
  feePercentage           Decimal   @default(2.00) @db.Decimal(5, 2)
  feeAmountUSDC           Decimal   @db.Decimal(10, 2)
  totalRepaymentUSDC      Decimal   @db.Decimal(10, 2)
  status                  String    @default("pending")
  yellowCardTransactionId String?
  disbursedAt             DateTime?
  repaidAt                DateTime?
  error                   String?
  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  invoice Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([invoiceId])
}

model AuditEvent {
  id        String   @id @default(uuid())
  invoiceId String
  eventType String   @db.VarChar(50)
  actorId   String?
  metadata  Json?
  signature String
  createdAt DateTime @default(now())

  invoice Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  actor   User?   @relation(fields: [actorId], references: [id])

  @@index([invoiceId])
  @@index([eventType])
  @@index([createdAt])
}
model SavingsGoal {
  id                String   @id @default(uuid())
  userId            String
  title             String   @db.VarChar(100)
  targetAmountUsdc  Decimal  @db.Decimal(18, 6)
  currentAmountUsdc Decimal  @default(0) @db.Decimal(18, 6)
  savingsPercentage Int
  isActive          Boolean  @default(true)
  status            String   @default("in_progress")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
}

model ClientReputation {
  id            String    @id @default(uuid())
  clientEmail   String    @unique @map("client_email")
  domainType    String?   @map("domain_type")
  paymentScore  Int       @default(0) @map("payment_score")
  isVerified    Boolean   @default(false) @map("is_verified")
  lastCheckedAt DateTime  @default(now()) @map("last_checked_at")
  createdAt     DateTime  @default(now()) @map("created_at")

  @@index([clientEmail])
  @@map("client_reputations")
}

model BadgeDefinition {
  id               String   @id @default(uuid())
  name             String   @db.VarChar(100)
  description      String?
  criteriaJson     Json
  imageUrl         String?  @db.VarChar(512)
  stellarAssetCode String   @unique @db.VarChar(12)
  isActive         Boolean  @default(true)
  createdAt        DateTime @default(now())

  userBadges UserBadge[]
}

model UserBadge {
  id             String   @id @default(uuid())
  userId         String
  badgeId        String
  stellarTxHash  String   @db.VarChar(255)
  issuedAt       DateTime @default(now())

  user  User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  badge BadgeDefinition @relation(fields: [badgeId], references: [id], onDelete: Cascade)

  @@unique([userId, badgeId])
  @@index([userId])
  @@index([badgeId])
}

model IncomeVerification {
  id            String   @id @default(uuid())
  userId        String
  tokenHash     String   @unique
  recipientName String?
  expiresAt     DateTime
  accessCount   Int      @default(0)
  createdAt     DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

model RiskAssessment {
  id         String   @id @default(uuid())
  entityType String   @db.VarChar(20)
  entityId   String
  riskScore  Int
  signals    Json?
  status     String   @default("logged") @db.VarChar(20)
  createdAt  DateTime @default(now())

  @@index([entityType, entityId])
  @@index([riskScore])
  @@index([status])
  @@index([createdAt])
}

model SecurityWatchlist {
  id        String   @id @default(uuid())
  type      String   @db.VarChar(20)
  value     String   @unique @db.VarChar(255)
  reason    String?  @db.Text
  createdAt DateTime @default(now())

  @@index([type])
  @@index([value])
}

model InvoiceCollaborator {
  id              String    @id @default(uuid())
  invoiceId       String
  subContractorId String
  sharePercentage Decimal   @db.Decimal(5, 2)
  payoutStatus    String    @default("pending") @db.VarChar(20) // pending, completed, failed
  internalTxId    String?   @db.VarChar(255)
  paidAt          DateTime?
  createdAt       DateTime  @default(now())

  invoice       Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  subContractor User    @relation("SubContractorCollaborations", fields: [subContractorId], references: [id], onDelete: Cascade)

  @@unique([invoiceId, subContractorId])
  @@index([invoiceId])
  @@index([subContractorId])
  @@index([payoutStatus])
}

model ManualPayment {
  id         String   @id @default(uuid())
  invoiceId  String   @map("invoice_id")
  clientName String   @db.VarChar(100) @map("client_name")
  amountPaid Decimal  @db.Decimal(18, 6) @map("amount_paid")
  currency   String   @default("NGN") @db.VarChar(10)
  receiptUrl String   @db.VarChar(512) @map("receipt_url")
  notes      String?  @db.Text
  status     String   @default("pending") @db.VarChar(20)
  verifiedBy String?  @map("verified_by")
  verifiedAt DateTime? @map("verified_at")
  createdAt  DateTime @default(now()) @map("created_at")

  invoice   Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  verifier User?   @relation("ManualPaymentVerifier", fields: [verifiedBy], references: [id], onDelete: SetNull)

  @@index([invoiceId])
  @@index([status])
  @@index([createdAt])
  @@map("manual_payments")
}

model PayoutBatch {
  id         String   @id @default(uuid())
  userId     String   @map("user_id")
  totalAmount Decimal @db.Decimal(18, 6) @map("total_amount")
  itemCount  Int      @map("item_count")
  status     String   @default("processing") @db.VarChar(30)
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  user  User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  items PayoutItem[]

  @@index([userId])
  @@index([status])
  @@map("payout_batches")
}

model PayoutItem {
  id                 String   @id @default(uuid())
  batchId            String   @map("batch_id")
  recipientIdentifier String  @db.VarChar(255) @map("recipient_identifier")
  amount             Decimal  @db.Decimal(18, 6)
  payoutType         String   @db.VarChar(30) @map("payout_type")
  status             String   @default("pending") @db.VarChar(30)
  txHash             String?  @db.VarChar(255) @map("tx_hash")
  errorMessage       String?  @db.Text @map("error_message")
  createdAt          DateTime @default(now()) @map("created_at")
  updatedAt          DateTime @updatedAt @map("updated_at")

  batch PayoutBatch @relation(fields: [batchId], references: [id], onDelete: Cascade)

  @@index([batchId])
  @@index([status])
  @@map("payout_items")
}

model CollectiveWallet {
  id                 String   @id @default(uuid())
  name               String   @db.VarChar(100)
  threshold          Int      @default(2)
  stellarAddress     String   @unique @db.VarChar(56) @map("stellar_address")
  encryptedSecretKey String?  @db.Text @map("encrypted_secret_key")
  createdAt          DateTime @default(now()) @map("created_at")

  signers   WalletSigner[]
  proposals MultisigProposal[]

  @@map("collective_wallets")
}

model WalletSigner {
  id        String   @id @default(uuid())
  walletId  String   @map("wallet_id")
  userId    String   @map("user_id")
  weight    Int      @default(1)
  createdAt DateTime @default(now()) @map("created_at")

  wallet CollectiveWallet @relation(fields: [walletId], references: [id], onDelete: Cascade)
  user   User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([walletId, userId])
  @@index([walletId])
  @@index([userId])
  @@map("wallet_signers")
}

model MultisigProposal {
  id                 String    @id @default(uuid())
  walletId            String    @map("wallet_id")
  proposerId          String    @map("proposer_id")
  destinationAddress  String    @db.VarChar(255) @map("destination_address")
  amountUsdc          Decimal   @db.Decimal(18, 6) @map("amount_usdc")
  memo                String?   @db.Text
  status              String    @default("pending") @db.VarChar(20)
  expiresAt           DateTime  @map("expires_at")
  executedAt          DateTime? @map("executed_at")
  executionStartedAt  DateTime? @map("execution_started_at")
  stellarTxHash       String?   @db.VarChar(255) @map("stellar_tx_hash")
  lastError           String?   @db.Text @map("last_error")
  createdAt           DateTime  @default(now()) @map("created_at")

  wallet     CollectiveWallet    @relation(fields: [walletId], references: [id], onDelete: Cascade)
  proposer   User                @relation("MultisigProposer", fields: [proposerId], references: [id], onDelete: Cascade)
  signatures ProposalSignature[]

  @@index([walletId])
  @@index([proposerId])
  @@index([status])
  @@index([expiresAt])
  @@map("multisig_proposals")
}

model ProposalSignature {
  id         String   @id @default(uuid())
  proposalId String   @map("proposal_id")
  signerId   String   @map("signer_id")
  createdAt  DateTime @default(now()) @map("created_at")

  proposal MultisigProposal @relation(fields: [proposalId], references: [id], onDelete: Cascade)
  signer   User             @relation(fields: [signerId], references: [id], onDelete: Cascade)

  @@unique([proposalId, signerId])
  @@index([proposalId])
  @@index([signerId])
  @@map("proposal_signatures")
}
